{
  "name": "user-input-mcp",
  "version": "1.0.0",
  "description": "MCP server for user input using Electron dialog",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "user-input-mcp": "./build/index.js"
  },
  "scripts": {
    "cleanup": "rm -rf build",
    "build": "tsc && npm run build:ui",
    "build:ui": "mkdir -p build/ui && BUILD_ENTRY=input-form vite build",
    "postbuild": "cp lib/*.cjs build/ && cp -r src/docs build/docs",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "user-input",
    "electron",
    "dialog"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "electron": "^33.4.11",
    "marked": "^17.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.19.6",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
