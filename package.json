{
  "name": "user-input-mcp",
  "version": "1.0.0",
  "description": "MCP server for user input using Electron dialog",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "user-input-mcp": "./build/index.js"
  },
  "scripts": {
